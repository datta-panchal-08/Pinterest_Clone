<% include ./partials/header.ejs%>

<div class="w-full min-h-screen bg-zinc-800 px-10 py-5 text-white">
    <h1 class="text-xl">Create A New Post.</h1>
    <hr class="opacity-10 mt-3">
    <form  action="/createpost" method="post" enctype="multipart/form-data">
        <input class="block w-1/3 text-black rounded-md px-3 py-2 " type="file" name="postimage">
        <input class="block w-1/3 text-black rounded-md px-3 py-2 mt-3 border-2" type="text" placeholder="Title" name="title">
        <textarea class="block w-1/3 text-black rounded-md h-60 px-3 py-2 mt-3 border-2" type="text" name="description" placeholder="Description"></textarea>
        <input class="block w-1/3 rounded-md px-3 py-2  mt-3 bg-red-700" type="submit" value="Create Post">
    </form>
</div>

